<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context=".TworzeniePostaci">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#A1261309"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/rameczka" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="vertical"
                android:padding="3dp">

                <EditText
                    android:id="@+id/editTextTextPersonName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ebebeb"
                    android:ems="10"
                    android:fontFamily="@font/gabriela"
                    android:inputType="textPersonName"
                    android:text="@string/imie"
                    android:textColor="#ebebeb" />

                <EditText
                    android:id="@+id/editTextTextPersonName3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ebebeb"
                    android:ems="10"
                    android:fontFamily="@font/gabriela"
                    android:inputType="textPersonName"
                    android:text="@string/Profesja"
                    android:textColor="#ebebeb" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Tytulykolumn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#A1261309"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/gabriela"
                android:text="@string/Wylosuj"
                android:textAlignment="textEnd"
                android:textColor="#ebebeb"
                android:textIsSelectable="false"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:fontFamily="@font/gabriela"
                android:text="@string/RzutKostką"
                android:textAlignment="center"
                android:textColor="#ebebeb"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/gabriela"
                android:text="@string/Wynik"
                android:textColor="#ebebeb"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SILA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#A1261309"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/gabriela"
                android:text="@string/Siła"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#ebebeb"
                android:textStyle="bold" />

            <Button
                android:id="@+id/TPButtonLosujSile"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="@drawable/twenty_sided_dice"
                android:backgroundTint="#ebebeb"
                android:fontFamily="@font/gabriela"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SilaLiczba"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/gabriela"
                android:text="50"
                android:textAlignment="center"
                android:textColor="#ebebeb"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/KONDYCJA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#A1261309"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/gabriela"
                android:text="@string/Kondycja"
                android:textAlignment="center"
                android:textColor="#ebebeb"
                android:textStyle="bold" />

            <Button
                android:id="@+id/TPButtonLosujKondycje"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="@drawable/twenty_sided_dice"
                android:backgroundTint="#ebebeb"
                android:fontFamily="@font/gabriela"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/KondycjaLiczba"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/gabriela"
                android:text="50"
                android:textAlignment="center"
                android:textColor="#ebebeb"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/BUDOWACIALA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#A1261309"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/gabriela"
                android:text="@string/BudowaCiała"
                android:textAlignment="center"
                android:textColor="#ebebeb"
                android:textStyle="bold" />

            <Button
                android:id="@+id/TPButtonLosujBudoweCiala"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="@drawable/twenty_sided_dice"
                android:backgroundTint="#ebebeb"
                android:fontFamily="@font/gabriela"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/BudowaCialaLiczba"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/gabriela"
                android:text="50"
                android:textAlignment="center"
                android:textColor="#ebebeb"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Wyglad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#A1261309"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/gabriela"
                android:text="@string/Wygląd"
                android:textAlignment="center"
                android:textColor="#ebebeb"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ButtonLosujWyglad"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="@drawable/twenty_sided_dice"
                android:backgroundTint="#ebebeb"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/WygladLiczba"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/gabriela"
                android:text="50"
                android:textAlignment="center"
                android:textColor="#ebebeb"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/INTELIGENCJA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#A1261309"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/gabriela"
                android:text="@string/Inteligencja"
                android:textAlignment="center"
                android:textColor="#ebebeb"
                android:textStyle="bold" />

            <Button
                android:id="@+id/TPButtonLosujInteligencje"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="@drawable/twenty_sided_dice"
                android:backgroundTint="#ebebeb"
                android:fontFamily="@font/gabriela"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/InteligencjaLiczba"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/gabriela"
                android:text="50"
                android:textAlignment="center"
                android:textColor="#ebebeb"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ZRENCZNOSC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#A1261309"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/gabriela"
                android:text="@string/Zręczność"
                android:textAlignment="center"
                android:textColor="#ebebeb"
                android:textStyle="bold" />

            <Button
                android:id="@+id/TPButtonLosujZrencznosc"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="@drawable/twenty_sided_dice"
                android:backgroundTint="#ebebeb"
                android:fontFamily="@font/gabriela"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ZrecznoscLiczba"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/gabriela"
                android:text="50"
                android:textAlignment="center"
                android:textColor="#ebebeb"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/WYKSZTALCENIE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#A1261309"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/gabriela"
                android:text="@string/Wykształcenie"
                android:textAlignment="center"
                android:textColor="#ebebeb"
                android:textStyle="bold" />

            <Button
                android:id="@+id/TPButtonLosujWyksztalcenie"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="@drawable/twenty_sided_dice"
                android:backgroundTint="#ebebeb"
                android:fontFamily="@font/gabriela"
                android:textColor="#ebebeb"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/WyksztalcenieLiczba"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/gabriela"
                android:text="50"
                android:textAlignment="center"
                android:textColor="#ebebeb"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MOC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#A1261309"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/gabriela"
                android:text="@string/Moc"
                android:textAlignment="center"
                android:textColor="#ebebeb"
                android:textStyle="bold" />

            <Button
                android:id="@+id/TPButtonLosujMoc"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="@drawable/twenty_sided_dice"
                android:backgroundTint="#ebebeb"
                android:fontFamily="@font/gabriela"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/MocLiczba"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/gabriela"
                android:text="50"
                android:textAlignment="center"
                android:textColor="#ebebeb"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/POCZYTALNOSC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#A1261309"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/gabriela"
                android:text="@string/Poczytalność"
                android:textAlignment="center"
                android:textColor="#ebebeb"
                android:textStyle="bold" />

            <Button
                android:id="@+id/TPButtonLosujPoczytalnosc"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="@drawable/twenty_sided_dice"
                android:backgroundTint="#ebebeb"
                android:fontFamily="@font/gabriela"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PoczytalnoscLiczba"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/gabriela"
                android:text="50"
                android:textAlignment="center"
                android:textColor="#ebebeb"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/GuzikiPostacieLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:addStatesFromChildren="false"
            android:orientation="horizontal"
            android:saveEnabled="false">

            <Button
                android:id="@+id/TPButtonZapiszPostac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/przycisknaprzyciski"
                android:fontFamily="@font/gabriela"
                android:text="@string/Zapisz"
                android:textColor="#ebebeb" />

            <Button
                android:id="@+id/TPReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/przycisknaprzyciski"
                android:fontFamily="@font/gabriela"
                android:text="@string/LosujWszystko"
                android:textColor="#ebebeb" />

        </LinearLayout>

        <Button
            android:id="@+id/TPButtonPowrod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/przycisknaprzyciski"
            android:fontFamily="@font/gabriela"
            android:text="@string/cofnij"
            android:textColor="#ebebeb" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>