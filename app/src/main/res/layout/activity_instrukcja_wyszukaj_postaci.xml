<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".InstrukcjaWyszukajPostaci">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView75"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#94261309"
            android:text="@string/WyszukajPostac"
            android:textAlignment="center"
            android:textColor="#edededed"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView76"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#94261309"
            android:text="Użytkownik ma możliwość przeglądania stworzonych przez siebie postaci. Po kliknięciu na dowolny awatar, gracz zostaje przeniesiony do jej ekranu. Tam dostaje możliwość modyfikowania jej danych. Aplikacja umożliwia:  - 	rozwój statystyk postaci po osiągnięciu nowego levela -	edycję ekwipunku  -	dodanie fascynującej historii, która będzie opowiadała o początkach postaci -	korzystanie oraz dodawanie zaklęć  -	dodanie notatek do swojej postaci  W razie śmierci postaci lub porzucenia jej gracz w każdym momencie jest w stanie ją usunąć.   "
            android:textColor="#edededed" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>