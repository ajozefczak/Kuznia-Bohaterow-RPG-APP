<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b3g"
    tools:context=".ResetHasla">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#94261309"
            android:fontFamily="@font/gabriela"
            android:text="Zresetuj Hasło"
            android:textAlignment="center"
            android:textColor="#ebebeb"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#94261309"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/gabriela"
                android:text="Podaj Email"
                android:textColor="#ebebeb"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/RHEditTextEmailWpisanie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#ebebeb"
                android:ems="10"
                android:fontFamily="@font/gabriela"
                android:inputType="textEmailAddress"
                android:textColor="#ebebeb"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:id="@+id/RButtonWyslijResetHasla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/przycisknaprzyciski"
            android:fontFamily="@font/gabriela"
            android:text="Wyślij"
            android:textColor="#ebebeb"
            android:textSize="24sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>