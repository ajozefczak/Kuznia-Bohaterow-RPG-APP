<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".InstrukcjaTrybGraczaMG">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView71"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#94261309"
            android:text="Tryb Gracza i MG"
            android:textAlignment="center"
            android:textColor="#edededed"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView72"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#94261309"
            android:text="W lewym górnym rogu ekranu menu głównego znajduje się przycisk do zmiany trybu aplikacji. Użytkownik może wykorzystywać aplikację na dwa sposoby:  -	jako gracz użytkownik może dołączać do istniejących stołów  brać udział w rozgrywce wcielając się w stworzoną przez siebie postać. -	jako mistrz gry, gracz może wcielić się w twórcę przygody w której jako narrator będzie kierował pozostałymi graczami. "
            android:textColor="#edededed" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>