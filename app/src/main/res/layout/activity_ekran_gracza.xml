<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/giants_fireplace_bar"
    tools:context=".EkranGracza">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp"
        tools:layout_editor_absoluteX="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#94261309"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/switch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="5dp"
                android:text="Tryb Gracza"
                android:textColor="#ebebeb"
                android:textColorHighlight="#ebebeb"
                android:textColorHint="#6C5D5D"
                android:textColorLink="#ebebeb"
                android:trackTint="#FF6C5D5D" />

            <Button
                android:id="@+id/GButtonWyloguj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/przycisknaprzyciski"
                android:text="Wyloguj"
                android:textColor="#ebebeb" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/GButtonPostac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/przycisknaprzyciski"
                android:text="Stwórz postać"
                android:textColor="#ebebeb" />

            <Button
                android:id="@+id/GButtonKalendarz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/przycisknaprzyciski"
                android:text="Kalendarz"
                android:textColor="#ebebeb" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#94261309"
            android:orientation="horizontal">

            <Button
                android:id="@+id/GButtonDolonczDoStołu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/przycisknaprzyciski"
                android:text="Dołacz do stołu"
                android:textColor="#ebebeb" />

            <EditText
                android:id="@+id/GEditTextKodStolu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#ebebeb"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Wpisz kod stołu"
                android:textColor="#ebebeb" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ebebeb"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#94261309"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <SearchView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#94261309"
        android:touchscreenBlocksFocus="false"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent">

    </SearchView>

</androidx.constraintlayout.widget.ConstraintLayout>